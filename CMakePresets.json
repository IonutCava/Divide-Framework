{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 29,
        "patch": 2
    },
    "configurePresets": [
        {
            "name": "conf-common",
            "description": "Configure with vcpkg toolchain and generate Ninja project files for all configurations.",
            "hidden": true,
            "generator": "Ninja Multi-Config",
            "warnings": { "dev": false },
            "environment": {
                "MIMALLOC_DISABLE_REDIRECT": "1"
            },
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "VCPKG_INSTALL_OPTIONS": "--allow-unsupported"
            }
        },
        {
            "name": "conf-windows-common",
            "description": "Windows settings for MSBuild toolchain that apply to msvc and clang.",
            "hidden": true,
            "inherits": "conf-common",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "toolset": {
                "value": "host=x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "WINDOWS_OS_BUILD": true
            }
        },
        {
            "name": "conf-linux-common",
            "description": "Linux OS settings for gcc and clang toolchains.",
            "hidden": true,
            "inherits": "conf-common",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "cacheVariables": {
                "LINUX_OS_BUILD": true
            }
        },
        {
            "name": "conf-macos-common",
            "description": "macOS builds",
            "hidden": true,
            "inherits": "conf-common",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            },
            "cacheVariables": {
                "MAC_OS_BUILD": true,
                "CMAKE_OSX_ARCHITECTURES": "arm64"
            }
        },
        {
            "name": "editor-build",
            "hidden": true,
            "cacheVariables": {
                "DIVIDE_STARTUP_TYPE": "IN_EDITOR"
            }
        },
        {
            "name": "asan-build",
            "hidden": true,
            "cacheVariables": {
                "RUN_ASAN": true
            }
        },
        {
            "name": "ubsan-build",
            "hidden": true,
            "cacheVariables": {
                "RUN_UBSAN": true
            }
        },
        {
            "name": "optick-build",
            "hidden": true,
            "cacheVariables": {
                "ENABLE_OPTICK_PROFILER": true
            }
        },
        {
            "name": "function-profiling-build",
            "hidden": true,
            "cacheVariables": {
                "ENABLE_FUNCTION_PROFILING": true
            }
        },
        {
            "name": "windows-msvc",
            "displayName": "Game Build (MSVC)",
            "description": "Target Windows with the msvc compiler.",
            "inherits": "conf-windows-common",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl",
                "CMAKE_CXX_COMPILER": "cl"
            }
        },
        {
            "name": "windows-clang",
            "displayName": "Game Build (Win64 - CLANG)",
            "description": "Target Windows with the clang compiler.",
            "inherits": "conf-windows-common",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang-cl",
                "CMAKE_CXX_COMPILER": "clang-cl"
            }
        },
        {
